<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_lock"
        android:layout_width="21dp"
        android:layout_height="@dimen/DP25"
        android:layout_marginTop="@dimen/DP24"
        android:contentDescription="@string/app_name"
        android:src="@drawable/suo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DP16"
        android:gravity="center_horizontal"
        android:text="The remaining chapters need to be unlocked"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/SP14"
        app:layout_constraintTop_toBottomOf="@id/img_lock" />

    <ImageView
        android:id="@+id/img_chapter"
        android:layout_width="99dp"
        android:layout_height="117dp"
        android:layout_marginTop="@dimen/DP26"
        android:contentDescription="@string/app_name"
        android:src="@drawable/yibenshu"
        app:layout_constraintEnd_toStartOf="@id/img_month"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/img_month"
        android:layout_width="99dp"
        android:layout_height="117dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/yueka"
        app:layout_constraintEnd_toStartOf="@id/img_Quarterly"
        app:layout_constraintStart_toEndOf="@id/img_chapter"
        app:layout_constraintTop_toTopOf="@id/img_chapter" />

    <ImageView
        android:id="@+id/img_Quarterly"
        android:layout_width="99dp"
        android:layout_height="144dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/jika"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_month"
        app:layout_constraintTop_toTopOf="@id/img_chapter" />

    <ImageView
        android:id="@+id/img_newbie"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DP70"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toBottomOf="@id/img_Quarterly" />

</androidx.constraintlayout.widget.ConstraintLayout>