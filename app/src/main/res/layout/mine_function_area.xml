<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/functions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/DP16"
    android:layout_marginTop="32dp"
    android:layout_marginEnd="@dimen/DP16"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <com.guuidea.inreading.widget.SingleFunctionItem
        android:id="@+id/rechargeHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:func_center="@string/recharge_history"
        app:func_left="@drawable/clock"
        app:func_right="@drawable/zhankai" />

    <com.guuidea.inreading.widget.SingleFunctionItem
        android:id="@+id/rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:func_center="@string/rating"
        app:func_left="@drawable/star"
        app:func_right="@drawable/zhankai" />

    <com.guuidea.inreading.widget.SingleFunctionItem
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:func_center="@string/feedback"
        app:func_left="@drawable/fankui"
        app:func_right="@drawable/zhankai" />

    <com.guuidea.inreading.widget.SingleFunctionItem
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:func_center="@string/setting"
        app:func_left="@drawable/shezhi_bold"
        app:func_right="@drawable/zhankai" />

</LinearLayout>
