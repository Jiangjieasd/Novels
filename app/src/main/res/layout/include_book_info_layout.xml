<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvBookName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingStart="@dimen/DP16"
        android:paddingEnd="@dimen/DP16"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/SP20"
        android:textStyle="bold"
        tools:text="Fight to break the s" />

    <TextView
        android:drawableStart="@drawable/yanjing_kai"
        android:drawablePadding="@dimen/DP5"
        android:id="@+id/tvBookView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DP16"
        android:paddingStart="@dimen/DP16"
        android:paddingEnd="@dimen/DP16"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/SP10"
        tools:text="Fight to break the s" />

    <TextView
        android:id="@+id/tvBookIntroduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DP16"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/color_999999"
        android:textSize="14sp"
        tools:text="Fight to break the s" />

    <com.guuidea.inreading.widget.SingleFunctionItem
        android:id="@+id/chapters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DP16"
        app:func_center="365"
        app:func_right="@drawable/zhankai"
        app:func_left="@drawable/caidan" />

    <LinearLayout
        android:layout_marginTop="@dimen/DP16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/DP16"
        android:paddingEnd="@dimen/DP16">

        <TextView
            android:id="@+id/tvAdd"
            android:layout_width="86dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="Add"
            android:background="@drawable/backg_sol_ff999999_cor_5"
            android:textColor="@android:color/white"
            android:textSize="@dimen/SP16" />

        <TextView
            android:id="@+id/tvReadNow"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="@dimen/DP12"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Read Now"
            android:background="@drawable/backg_sol_ff333333_cor_5dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/SP16" />

    </LinearLayout>

</LinearLayout>