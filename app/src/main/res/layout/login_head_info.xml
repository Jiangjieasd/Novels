<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent">

    <LinearLayout
        android:background="@drawable/dialog_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/DP16"
        android:layout_marginStart="@dimen/DP16"
        android:layout_marginTop="@dimen/DP36">
        <!--与no_login_head_info保持一致,用作动画处理-->
        <LinearLayout
            android:id="@+id/info_area"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginStart="110dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/user_name"
                    android:text="Obama"
                    android:textSize="@dimen/SP20"
                    android:textColor="@color/color_333333"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="@string/vip"
                    android:textSize="@dimen/SP16"
                    android:layout_marginStart="@dimen/DP13"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:textSize="@dimen/SP12"
                android:textColor="@color/color_666666"
                android:id="@+id/user_id"
                android:text="ID:24355264534"
                android:layout_marginTop="@dimen/DP13"
                android:layout_marginStart="110dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/SP12"
                android:textColor="#EAB56A"
                android:id="@+id/user_Vip_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="@dimen/DP13"
                android:layout_marginBottom="@dimen/DP25"
                android:text="20.20434855" />

        </LinearLayout>

    </LinearLayout>

    <!--与no_login_head_info保持一致-->
    <com.guuidea.inreading.widget.CircleImageView
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:id="@+id/user_profile"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:src="@drawable/shelf"
        android:layout_marginStart="@dimen/DP36" />

</FrameLayout>