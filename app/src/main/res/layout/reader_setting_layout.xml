<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/setting_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_770"
        android:layout_gravity="bottom"
        android:background="@color/setting_color"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:paddingEnd="@dimen/DP10"
            android:paddingStart="@dimen/DP10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_120"
            android:layout_marginTop="@dimen/qb_px_25"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginEnd="10dp"
                android:layout_width="@dimen/qb_px_90"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/ic_brightness_plus"
                android:textColor="@color/color_333333" />

            <SeekBar
                android:id="@+id/light_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/CustomSeekBarStyle" />

        </LinearLayout>

        <LinearLayout
            android:paddingEnd="@dimen/DP10"
            android:paddingStart="@dimen/DP10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_120"
            android:layout_marginTop="@dimen/qb_px_25"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/reader_bg_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/qb_px_10"
                android:layout_weight="1"
                android:background="@color/reader_bg_0" />

            <TextView
                android:id="@+id/reader_bg_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/qb_px_10"
                android:layout_weight="1"
                android:background="@color/reader_bg_1" />

            <TextView
                android:id="@+id/reader_bg_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/qb_px_10"
                android:layout_weight="1"
                android:background="@color/reader_bg_2" />

            <TextView
                android:id="@+id/reader_bg_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/qb_px_10"
                android:layout_weight="1"
                android:background="@color/reader_bg_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_120"
            android:layout_marginTop="@dimen/qb_px_25"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/qb_px_185"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="A"
                android:layout_marginEnd="@dimen/DP10"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/qb_px_55" />

            <SeekBar
                android:id="@+id/text_size_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/CustomSeekBarStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_120"
            android:layout_marginTop="@dimen/qb_px_25"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/qb_px_185"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="L"
                android:layout_marginEnd="@dimen/DP10"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/qb_px_55" />

            <SeekBar
                android:id="@+id/text_space_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/CustomSeekBarStyle" />
        </LinearLayout>

        <LinearLayout
            android:paddingStart="@dimen/DP10"
            android:paddingEnd="@dimen/DP10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_120"
            android:layout_marginTop="@dimen/qb_px_25"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/effect_real_one_way"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/qb_px_10"
                android:layout_weight="1"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:text="Simu 1" />

            <TextView
                android:id="@+id/effect_real_both_way"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/qb_px_10"
                android:layout_weight="1"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:text="Simu 2" />

            <TextView
                android:id="@+id/effect_cover"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/qb_px_10"
                android:layout_weight="1"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:text="Cover" />

            <TextView
                android:id="@+id/effect_slide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/qb_px_10"
                android:layout_weight="1"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:text="Scroll" />

            <TextView
                android:id="@+id/effect_non"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/qb_px_10"
                android:layout_weight="1"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:text="No" />
        </LinearLayout>

    </LinearLayout>

</merge>