<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="23dp"
    android:layout_marginEnd="23dp"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DP36"
        android:gravity="center"
        android:textColor="@color/color_252525"
        android:textSize="@dimen/SP18"
        tools:text="Tips" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DP38"
        android:gravity="center_horizontal"
        android:paddingStart="@dimen/DP30"
        android:paddingEnd="@dimen/DP30"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/SP14"
        tools:text="Tips" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DP40"
        android:layout_marginBottom="@dimen/DP36"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_left"
            android:layout_width="108dp"
            android:layout_height="@dimen/DP36"
            android:background="@drawable/backg_str_ff33333_cor_5"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/SP16"
            tools:text="Cancel" />

        <TextView
            android:id="@+id/btn_right"
            android:layout_width="@dimen/DP108"
            android:layout_height="@dimen/DP36"
            android:layout_marginStart="@dimen/DP8"
            android:background="@drawable/backg_sol_ff333333_cor_5dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/SP16"
            tools:text="Add" />

    </LinearLayout>

</LinearLayout>