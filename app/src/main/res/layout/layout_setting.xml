<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFEFEFEF"
    android:orientation="vertical">

    <com.guuidea.inreading.widget.CustomActionbar
        android:id="@+id/action_bar"
        app:titile="@string/setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DP48" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/action_bar"
        android:layout_marginStart="@dimen/DP16"
        android:layout_marginTop="@dimen/DP33"
        android:layout_marginEnd="@dimen/DP16"
        android:background="@drawable/dialog_background"
        android:orientation="vertical">

        <com.guuidea.inreading.SingleItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:content_str="@string/recharge_history"
            app:sub_content_str="V1.0" />

        <com.guuidea.inreading.SingleItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:content_str="@string/rating"
            app:sub_content_str="33M" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/DP45"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/DP16"
        android:layout_marginEnd="@dimen/DP16"
        android:layout_marginBottom="@dimen/DP40"
        android:background="@drawable/button_black_5_background"
        android:gravity="center"
        android:text="@string/log_out"
        android:textColor="@android:color/white"
        android:textSize="@dimen/SP16" />

</RelativeLayout>